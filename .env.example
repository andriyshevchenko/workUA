# API Keys для LLM
OPENAI_API_KEY=your_openai_key_here

# Work.ua credentials
# ВАЖЛИВО: Бот автоматично відкриє сторінку логіну, введе номер,
# надішле SMS код, і ЗАЧЕКАЄ 60 секунд поки ви введете код вручну!
# Формат: +380XXXXXXXXX (з +380)
WORKUA_PHONE=+380XXXXXXXXX

# Налаштування
FILTER_PATH=./my_filter.txt
SEARCH_KEYWORDS=python developer,backend developer
LOCATIONS=Київ,Львів
REMOTE_ONLY=false
HEADLESS=false

# Налаштування бота
MAX_APPLICATIONS=10
USE_LLM=false
MIN_SCORE=7

# LLM перевірка перед відгуком (опціонально, для більш детального фільтрування)
USE_PRE_APPLY_LLM_CHECK=false
MIN_MATCH_PROBABILITY=90

# LLM Model
MODEL_NAME=gpt-4o
